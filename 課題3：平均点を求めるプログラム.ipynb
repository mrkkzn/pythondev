   ],
   "source": [
    "i = 0\n",
    "total_score = 0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "    if score == -1:\n",
    "        break\n",
    "    total_score += score\n",
    "    i += 1\n",
    "\n",
    "print(f\"{i}人のテストの平均点は{round(total_score/i, 1)}点です\")\n"
   ]
  }
